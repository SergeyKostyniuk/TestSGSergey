    public static String pCh[] = new String[m.length]; //Массив предыдущих чисел
    public static int ts;
    public static int tss;
    public static int[] n = new int[m.length];   //Номера з повторами
  
    
    public static void main(String[] args) throws IOException {  
    	
    	
    	
    	String s = "0,1,3,2,5,4,6,7,8,9,10";
		String [] i = s.split(",");
		List<String> list = Arrays.asList(i);
		Collections.shuffle(list);
        System.out.println(list);
    	
    	String fileName = "/Users/prologistic/source.txt";
    	String contents = readUsingScanner(fileName);
    	
    	
    	
        int k = 0;

		String ch;
        for(ts = 0; ts<m.length; ts++){
        	
            if (!povtor(ch=m[ts])){              //чи не повторювалось вже
                ch=m[ts];
                for(int ts2=0;ts2<m.length;ts2++)             
                    if(m[ts2]==ch){   
                        n[k]=ts2+1;  
                        k++;         //кількість повторів
                    }
                if (k>6){            //якщо більше 6
                    System.out.print("то 6 найбільш вживаних фраз ");
                 // for(int a=0;a<k;a++) System.out.print(" "+n[a]); //В яких номерах ячейок
                    System.out.println(": "+ch);
                }
                k=0; //Обнуляємо
                pCh[ts]=ch; 
            }
            
        }
    }
    private static String readUsingScanner(String fileName) throws IOException {
    	Scanner scanner = new Scanner(Paths.get(fileName), StandardCharsets.UTF_8.name());
        //здесь мы можем использовать разделитель, например: "\\A", "\\Z" или "\\z"
        String data = scanner.useDelimiter("\\|").next();
        scanner.close();
        return data;
	}
    
    
	static boolean povtor(String i){          
        for(int a = 0; a<ts;a++){
            if (pCh[a]==i) return true;
        }
        return false;
    }
 
